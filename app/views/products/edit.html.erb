<h1>Edit Product</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
   Name: <input type="text" name="form_name" value="<%= @product.name %>"> 
 </div>
  <div> 
    Price: <input type="text" name="form_price" value="<%= @product.price %>"> 
  </div>
  <div> 
    Description: <input type="text" name="form_description" value="<%= @product.description %>"> 
  </div>
  <input type="submit" value="Edit Product">
</form>